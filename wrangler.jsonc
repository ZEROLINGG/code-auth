{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "code-auth",
	"main": "src/index.ts",
	"compatibility_date": "2025-09-27",
	"assets": {
		"binding": "ASSETS",
		"directory": "./public"
	},
	"observability": {
		"enabled": true
	},
	"kv_namespaces": [
		{
			"binding": "AUTH_KV",
			"id": "5a8295dd41f44e6d982dd1240b7c4e97"
		}
	],
	"vars": {
		"SERVER_KEY": "",
		"SUPER_ADMIN_IP": "",
		"SUPER_ADMIN_KEY": ""
	},
	"rules": [
		{
			"type": "Text",
			"globs": ["**/*.html"],
			"fallthrough": true
		}
	]

	/**
	 * Smart Placement
	 * https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
	 */
